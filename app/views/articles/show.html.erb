<div class="container-fluid">
	<div class="row">
		<div id="LeftPadding" class="col-xs-2">
        </div>
		
        <div id="content" class="col-xs-8">
			<div class="row">
				<div id="LeftPadding" class="col-xs-3">
					
				</div>
				
				<div id="content" class="col-xs-6">
					<h1><%= link_to @article.title, article_path(@article), method: :get %></h1>
					
					<p>
						<%= markdown(@article.text) %>
					</p>
				</div>
				
				<div id="RightPadding" class="col-xs-3">

				</div>
			</div>
			
			<div class="row">	
				<div class="col-xs-3">
					
				</div>
				
				<div class="col-xs-2">
					<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-primary btn-sm'%>
				</div>
				
				<div class="col-xs-2">
					<%= link_to 'Back', articles_path, class: 'btn btn-default btn-sm'%>
				</div>
				
				<div class="col-xs-5">
					<%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'%>
				</div>
			</div>
			
			<hr style="height:2px; width:50%; border:none;color:#333;background-color:#333;" />
			
			<div class="row">
				<div class="col-xs-3">
				</div>
				
				<div class="col-xs-6">
					<h2>Comments:</h2>
				</div>
				
				<div class="col-xs-3">
				</div>
			</div>
			
			<div class="row">
				<div class="col-xs-3">
				</div>
				<div class="col-xs-6">
					<%= render @article.comments %>
				</div>
				<div class="col-xs-3">
				</div>
			</div>

			<hr style="height:2px; width:50%; border:none;color:#333;background-color:#333;" />
			
			<div class="row">
				<div class="col-xs-3">
				</div>
				<div class="col-xs-6">
					<h2>Add a comment:</h2>
				</div>
				<div class="col-xs-3">
				</div>
			</div>
			
			<div class="row">
				<div class="col-xs-3">
				</div>
				<div class="col-xs-6">
					<%= form_for([@article, @article.comments.build]) do |f| %>
						<p>
							<%= f.label :commenter %><br>
							<%= f.text_field :commenter %>
						</p>
						
						<p>
							<%= f.label :body %><br>
							<%= f.text_area :body, size: "30x10" %>
						</p>
						
						<p>
							<%= f.submit %>
						</p>
					<% end %>
				</div>
				<div class="col-xs-3">
				</div>
			</div>
			
		</div>
		
		<div id="RightPadding" class="col-xs-2">

        </div>
	</div>
</div>

